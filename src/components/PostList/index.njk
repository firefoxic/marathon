{%- from "../PostPreview/index.njk" import PostPreview with context -%}
{%- from "../Pagination/index.njk" import Pagination with context -%}

{% macro PostList(classes) %}
	<section class="{{ classes }} PostList">
		<h2 class="PostList-Title">Карточки</h2>
		<ul class="PostList-Container">
			{% for post in posts %}
			<li class="PostList-Item">
				{{ PostPreview("", post) }}
			</li>
			{% endfor %}
		</ul>
		{{ Pagination("PostList-Pagination", 10, 1) }}
	</section>
{% endmacro %}
